<%= render 'form', url: shuffle_lists_url, method: 'POST', title: '新規作成する' %>

<!--TODO: シャッフルリスト名検索-->
<% if @shuffle_lists %>
    <div class="card-columns">
        <% @shuffle_lists.each do |list| %>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= list.name %></h5>
                    <%= button_to "シャッフル実行", action: "execute", params: { id: list.id } %>
                    <%= link_to "編集", edit_shuffle_list_path(id: list.id) %>
                    <ul>
                        <% list.shuffle_items.each do |item| %>
                        <li><%= item.name %></li>
                        <% end %>
                        <!--TODO: 3つまで表示させて他は隠す-->
                    </ul>
                </div>
            </div>
        <% end %>
    </div>
<% end %>
